<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.eventmanager.MainActivity"
    android:background="#000000">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/birthday"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KidsAndMe"
        android:textColor="@color/accent"
        android:id="@+id/appNameTextView"
        android:textSize="55sp"
        android:textStyle="bold"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event"
        android:textSize="20sp"
        android:id="@+id/btnCreateEvent"
        android:background="@color/colorPrimary"
        android:textColor="@color/accent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnFindEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/appNameTextView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/appNameTextView"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/accent"
        android:textSize="20sp"
        android:text="find event" />

</RelativeLayout>
