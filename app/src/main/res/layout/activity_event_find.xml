<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <Button
        android:id="@+id/btnGoToCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to calendar"
        android:layout_alignBaseline="@+id/btnSelectDate"
        android:layout_alignBottom="@+id/btnSelectDate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp" />

    <Button
        android:id="@+id/btnSelectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select date"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnChooseDate"
        android:layout_marginTop="74dp"
        android:layout_toLeftOf="@+id/btnGoToCalendar"
        android:layout_toStartOf="@+id/btnGoToCalendar"
        android:textSize="30sp"
        android:hint="Date" />
</RelativeLayout>